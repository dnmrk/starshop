{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Starshop!{% endblock %}

{% block body %}
    <strong>Starshop Twig.</strong>
    <div>
        Browse through {{ ships|length }} starships!

        {% if ships|length > 2 %}
            {# sample twig comment #}
            <p>That's a lot of ships!</p>
        {% endif %}
    </div>

    <div>
        <h2>My Ship</h2>
        <table>
            <tr>
                <th>Name</th>
                <td>
                    <a href="{{ path('app_starship_show', { id: myShip.id }) }}">
                        {{ myShip.name }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Class</th>
                <td>{{ myShip.class }}</td>
            </tr>
            <tr>
                <th>Captain</th>
                <td>{{ myShip.captain|upper }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ myShip.status }}</td>
            </tr>
        </table>
    </div>
{% endblock %}
